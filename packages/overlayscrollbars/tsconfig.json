{
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "target": "es6",
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "es6",
        "moduleResolution": "node",
        "removeComments": true
    },
    "exclude": [
        "./dist",
        "**/*.test.*",
        "node_modules"
    ]
}