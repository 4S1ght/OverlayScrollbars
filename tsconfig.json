{
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "es2015",
        "sourceMap": true,
        "inlineSources": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "declaration": true,
        "declarationDir": "./dist/types",
        "suppressImplicitAnyIndexErrors": true,
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true
    },
    "include": [
        "./src",
        "./tests"
    ],
    "exclude": [
        "./dist",
        "node_modules"
    ]
}